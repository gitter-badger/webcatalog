{
  "name": "WebCatalog",
  "version": "2.3.0",
  "description": "WebCatalog, run your favorite web apps natively",
  "main": "main.js",
  "scripts": {
    "start": "electron ./app",
    "dev": "NODE_ENV=development webpack -d --watch",
    "compile": "NODE_ENV=production webpack -p",
    "dev-windows": "set NODE_ENV=development&& webpack -d --watch",
    "compile-windows": "set NODE_ENV=production&& webpack -p",
    "build-mac": "node ./builder-mac.js",
    "build-windows": "node ./builder-windows.js",
    "lint": "eslint ./src --ext .js --cache",
    "dist-mac": "npm run compile && npm run build-mac",
    "dist-windows": "npm run compile-windows && npm run build-windows"
  },
  "repository": "https://github.com/webcatalog/desktop",
  "author": "Quang Lam",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "clean-webpack-plugin": "^0.1.15",
    "copy-webpack-plugin": "^4.0.1",
    "electron": "^1.4.13",
    "electron-builder": "11.1.1",
    "electron-builder-squirrel-windows": "^11.0.0",
    "eslint": "^3.13.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "webpack": "^1.14.0",
    "webpack-merge": "^2.3.1"
  },
  "dependencies": {
    "@blueprintjs/core": "^1.5.0",
    "algoliasearch": "^3.20.3",
    "immutable": "^3.8.1",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "redux-batched-actions": "^0.1.5",
    "redux-thunk": "^2.1.0"
  }
}
