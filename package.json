{
  "name": "WebCatalog",
  "version": "2.3.0",
  "description": "WebCatalog, run your favorite web apps natively",
  "main": "main.js",
  "scripts": {
    "start": "electron ./app",
    "dev": "NODE_ENV=development webpack -d --watch",
    "compile": "NODE_ENV=production webpack -p",
    "build": "node ./builder.js",
    "lint": "eslint ./src --ext .js --cache",
    "dist": "npm run compile && npm run build"
  },
  "repository": "https://github.com/webcatalog/desktop",
  "author": "Quang Lam",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "clean-webpack-plugin": "^0.1.14",
    "copy-webpack-plugin": "^4.0.1",
    "electron": "^1.4.12",
    "electron-builder": "^10.8.1",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.6.0",
    "webpack": "^1.14.0",
    "webpack-merge": "^1.1.1"
  },
  "dependencies": {
    "@blueprintjs/core": "^1.3.1",
    "algoliasearch": "^3.20.1",
    "immutable": "^3.8.1",
    "react": "^15.4.1",
    "react-addons-css-transition-group": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "redux": "^3.6.0",
    "redux-batched-actions": "^0.1.5",
    "redux-thunk": "^2.1.0"
  }
}
